default_platform(:android)

platform :android do
  desc "Deploy a new version to the Google Play Store Alpha Track (Closed Beta)"
  lane :deploy_alpha do
    # Upload to Play Store Alpha track (closed beta)
    # AAB is already built by GitHub Actions build job
    upload_to_play_store(
      track: 'alpha',
      aab: '../build/app/outputs/bundle/release/app-release.aab',
      skip_upload_apk: true,
      skip_upload_metadata: false,
      skip_upload_images: false,
      skip_upload_screenshots: false,
      release_status: 'completed'
    )
  end

  desc "Deploy a new version to the Google Play Store Internal Testing Track"
  lane :deploy_internal do
    # Upload to Play Store Internal Testing track
    # AAB is already built by GitHub Actions build job
    upload_to_play_store(
      track: 'internal',
      aab: '../build/app/outputs/bundle/release/app-release.aab',
      skip_upload_apk: true,
      skip_upload_metadata: false,
      skip_upload_images: false,
      skip_upload_screenshots: false,
      release_status: 'completed'
    )
  end

  desc "Promote from Alpha to Production"
  lane :promote_to_production do
    upload_to_play_store(
      track: 'alpha',
      track_promote_to: 'production',
      skip_upload_apk: true,
      skip_upload_aab: true,
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end

  desc "Build release AAB without uploading"
  lane :build_release do
    gradle(
      task: "bundle",
      build_type: "Release",
      project_dir: ".."
    )
  end
end
